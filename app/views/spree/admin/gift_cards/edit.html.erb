<% content_for :page_title do %>
  <%= Spree.t(:editing_gift_card) %>
<% end %>

<% content_for :page_actions do %>
  <%= link_to_with_icon('arrow-left',
                        Spree.t(:back_to_gift_cards_list),
                        spree.admin_gift_cards_path,
                        :class => 'btn btn-success'
                       ) %>
<% end %>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @gift_card } %>

<%= form_for [:admin, @gift_card] do |f| %>
  <fieldset class="no-border-top">
    <%= render :partial => 'form', :locals => { :f => f } %>
    <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>

<h2><%= Spree.t(:transactions) %><h2>
<table class="table">
  <thead>
    <tr>
      <th>Order</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
    <% @gift_card.transactions.each do |transaction| %>
      <tr>
        <td><%= link_to "#{transaction.order.number}:" , edit_admin_order_path(transaction.order) %></td>
        <td><%= number_to_currency transaction.amount %></td>
      </tr>
    <% end %>
  </tbody>
</table>
